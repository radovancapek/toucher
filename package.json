{
	"name": "toucher",
	"description": "App for controlling toucher",
	"author": "radovancapek",
	"version": "1.0.1",
	"license": "MIT",
	"scripts": {
		"dev": "npm run pack && npm run start",
		"watch": "concurrently 'npm:watcher' 'npm:electronmon'",
		"watcher": "webpack --config .webpackrc.js --watch",
		"pack": "webpack --config .webpackrc.js",
		"start": "electron .",
		"electronmon": "electronmon .",
		"build": "electron-builder",
		"buildportable": "electron-builder build --win portable",
		"publish": "electron-builder --publish always"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/radovancapek/toucher.git"
	},
	"build": {
		"productName": "Toucher",
		"appId": "com.radovancapek.toucher",
		"win": {
			"target": [
				"nsis"
			]
		},
		"publish": [
			{
				"provider": "github",
				"owner": "radovancapek",
				"repo": "toucher"
			}
		]
	},
	"electronmon": {
		"patterns": [
			"!renderer/*",
			"!dist/*"
		]
	},
	"main": "./main/main.js",
	"dependencies": {
		"electron-is-dev": "^2.0.0",
		"electron-progressbar": "^2.0.1",
		"electron-squirrel-startup": "^1.0.0",
		"electron-updater": "^4.3.9",
		"react-icons": "^4.2.0",
		"react-select": "^4.3.1",
		"react-svg-path": "^1.13.1",
		"serialport": "^9.2.0"
	},
	"devDependencies": {
		"@babel/core": "^7.14.8",
		"@babel/preset-env": "^7.14.8",
		"@babel/preset-react": "^7.14.5",
		"babel-loader": "^8.2.2",
		"concurrently": "^6.2.0",
		"css-loader": "^6.2.0",
		"electron": "^13.1.7",
		"electron-builder": "^22.11.7",
		"electron-rebuild": "^3.2.0",
		"electronmon": "^2.0.1",
		"eslint": "^7.31.0",
		"eslint-config-node": "^4.1.0",
		"eslint-config-prettier": "^8.3.0",
		"eslint-config-promise": "^2.0.2",
		"eslint-config-react": "^1.1.7",
		"eslint-config-standard": "^16.0.3",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-promise": "^5.1.0",
		"eslint-plugin-react": "^7.24.0",
		"eslint-plugin-standard": "^5.0.0",
		"prettier": "^2.3.2",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^5.2.0",
		"sass": "^1.36.0",
		"sass-loader": "^12.1.0",
		"style-loader": "^3.2.1",
		"webpack": "^5.47.0",
		"webpack-cli": "^4.7.2"
	}
}
